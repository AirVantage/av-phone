<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ItemLabel" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditableItem" parent="AppTheme">
        <item name="android:textColor">@color/grey_1</item>
    </style>

    <style name="Message" parent="AppTheme">
        <item name="android:padding">6dp</item>
    </style>
    
    <style name="InfoMessage" parent="Message">
        <item name="android:color">@android:color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="ErrorMessage" parent="Message">
        <item name="android:color">@android:color/white</item>
        <item name="android:background">@color/purple</item>
    </style>
    
</resources>