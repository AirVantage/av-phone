<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ItemLabel" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditableItem" parent="AppTheme">
        <item name="android:textColor">@color/grey_1</item>
    </style>

    <style name="Message" parent="AppTheme">
        <item name="android:padding">6dp</item>
    </style>
    
    <style name="InfoMessage" parent="Message">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/my_gradient_black</item>
    </style>

    <style name="ErrorMessage" parent="Message">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/purple</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/sierrared</item>
    </style>
    
</resources>